
//C++//

#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"

using namespace std;

void main()
{
	float r,pi,area;
	cout<< "radio: ";
	cin>>r;
	pi=3.141592;
	area=pi*r*r;
	cout<< "area: "<<area<<endl;
	getch();
}

//Pseudocodigo//
Algoritmo AreadelCirculo
	Definir radio, area Como Real
	Escribir 'Ingrese el radio'
	Leer radio
	area <- 3.141592*radio*radio
	Escribir 'area: ',area
FinAlgoritmo

