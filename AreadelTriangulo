
//C++//

#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"

using namespace std;

void main()
{
	float b,h,area;
	cout<< "base: ";
	cin>>b;
	cout<< "altura: ";
	cin>>h;
	area=(b*h)/2;
	cout<< "area: "<<area<<endl;	
		getch();
}

//Pseudocodigo//

Algoritmo AreadelTriangulo
	Definir Area, base, altura como reales;
	Escribir "Ingrese la base"
	Leer base
	Escribir "Ingrese la altura"
	Leer altura
	area= (base*altura)/2
	Escribir "area: " area;
FinAlgoritmo



