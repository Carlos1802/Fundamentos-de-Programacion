
//C++//


#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

void main()
{
	float salariominimo, salariobruto, salarioneto;
	char s;
	salariominimo=2060;
	
	do{
		
		cout<<"Ingrese el salario bruto: ";
		cin>> salariobruto;
		
		if(salariobruto<salariominimo*4){
		salarioneto= salariobruto - salariobruto * 0.121;
		cout<<"El salario neto es: "<<salarioneto<<endl;

	}else
		salarioneto= salariobruto - salariobruto * (0.121+0.13);
		cout<<"el salario neto es: "<<salarioneto<<endl;
		cout<<"7Desea continuar?"<<endl;
		cin>>s;

	}while(s=='s');

		getch();
}
