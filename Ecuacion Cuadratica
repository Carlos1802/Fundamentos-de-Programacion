
//C++//

#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"
 using namespace std;

 void main() 
 {
	 float b, a, c, solucion, x1, x2;
	 
	 cout<<"Ingrese el valor de a: "<<endl;
	 cin>>a;
	 cout<<"Ingrese el valor de b: "<<endl;
	 cin>>b;
	 cout<<"Ingrese el valor de c: "<<endl;
	 cin>>c;

	 x1=((-1)*b+sqrt(pow(b,2)-4*a*c)) / 2*a;

	 x2=((-1)*b-sqrt(pow(b,2)-4*a*c)) / 2*a;

	 solucion = pow(b,2)-4*a*c;
	 if(solucion==0)
		 cout<<"La ecuacion tiene una sola solucion real."<<endl;
	 if(solucion>0)
		 cout<<"La ecuacion tiene dos soluciones reales."<<endl;
	 if(solucion<0)
		 cout<<"La ecuacion no tiene solucuiones reales."<<endl;

	 cout<<"Las soluciones de la ecuacion son."<<endl;

	 cout<<"x1: "<<x1<<endl;
	 cout<<"x2: "<<x2<<endl;

	 getch();
   }
