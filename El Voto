#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"
 using namespace std;

 void main() 
 {
	float edad, antecedentes, nacionalidad;
		 
	cout<<"Ingrese sus datos para ver si esta habilitado a votar."<<endl;

	cout<<"Ingrese su edad."<<endl;
	cin>>edad;

	cout<<"Tiene antecedentes penales?"<<endl;
	cout<<"1.Si , 2.No"<<endl;
	cin>>antecedentes;

	cout<<"Usted tiene nacionalidad boliviana?"<<endl;
	cout<<"1.Si , 2.No"<<endl;
	cin>>nacionalidad;

	if(edad<18){
		cout<<"Usted no puede votar en ninguna eleccion.";
	}else
	{
		if(antecedentes==2 && nacionalidad==1)
			cout<<"Usted puede votar en las Elecciones Nacionales y Municipales."<<endl;
		if(antecedentes==1 && nacionalidad==1)
			cout<<"Usted no puede votar en las Elecciones Nacionales y Municipales.";
		if(antecedentes==2 && nacionalidad==2)
			cout<<"Usted solamnente puede votar en las Elecciones Municipales.";
		1if(antecedentes==1 && nacionalidad==2)
			cout<<"Usted no puede votar en las Elecciones Nacionales y Municipales.";
	}
	getch();
 }

