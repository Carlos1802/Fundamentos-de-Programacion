#include "stdafx.h"
#include <iostream>
#include "conio.h"
#define MAX 100

using namespace std;

void cargar(double vec[], int tamano);
int buscar( double vec[], int tamano, int x);


void main()
{
	double vec[MAX];
	int tamano, ubicacion, x;
	cout<<"Ingrese el tamano de su vector."<<endl;
	cin>>tamano;
	cout<<"Ingrese el valor que desea buscar."<<endl;
	cin>>x;
	cargar(vec,tamano);
	ubicacion = buscar(vec, tamano, x);
	
	getch();
}

void cargar(double vec[], int tamano)
{
	for(int i=0; i<tamano, i++)
	{
		cout<<"a["<<i<<"]= ";
		cin>> vec[i];
	}
}

int buscar(double vec[], int tamano, int x)
{
	for(int i=0; i<tamano; i++)
		vec[i]==x;

		



