1. Suma de numeros enteros entre 1 y N.

#include "stdafx.h"
#include <iostream>
#include "conio.h"
using namespace std;

int serie(int n);

void main()
{
	int n,s=0;
	cout<<"Ingrese la cantidad de numeros que desea sumar."<<endl;
	cin>>n;
	s=serie(n);
	cout<<"El resultado de la suma es: "<<s<<endl;
	getch();
}

int serie(int n)
{
	int s=0;
	for(int i=1;i<=n;i++)
	{
		s=s+i;
	}
	return s;
}


