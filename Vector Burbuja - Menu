#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "stdlib.h"
#define MAX 100	

using namespace std;

void cargar(int vec[],int tam);
void ordenar(int vec[],int tam);
void mostrar(int vec[],int tam);


void main()
{
	int n, vec[MAX], opcion;

	do{
		cout<<"Ingrese el tamaÃ±o del vector."<<endl;
		cin>>n;
	}while(n>MAX || n<=0);

	do{
		cout<<"_____MENU_____"<<endl;
		cout<<"Que opcion desea realizar?"<<endl;
		cout<<"1. Cargar vector."<<endl;
		cout<<"2. Ordenar vector."<<endl;
		cout<<"3. Mostrar vector."<<endl;
		cout<<"0. Salir."<<endl;
		cout<<"Digite su opcion a realizar."<<endl;
		cin>>opcion;

	switch(opcion)
	{
		case 1:
			cargar(vec,n);break;
		case 2:
			ordenar(vec,n);break;
		case 3:
			mostrar(vec,n);break;
		case 0:
			cout<<"Saliendo."<<endl;break;
		default:
			cout<<"Opcion erronea."<<endl;break;
	}
		system("cls");
	}while(opcion!=0);
	getch();
}	


void cargar(int vec[],int tam)
{
	for(int i=0;i<tam;i++)
	{
		
		cout<< "Ingrese el valor para vec["<< i << "]=";
		cin>> vec[i];
	}
}
void ordenar(int vec[],int tam)
{
	int aux,m;
	for (int i=0;i<tam-1;i++)
	{
		for(int j=i+1;j<tam;j++)
		{
			if(vec[i]>vec[j]) 
			{
				aux=vec[j];
				vec[j]=vec[i];
				vec[i]=aux;
			}
		}
	}
}

void mostrar(int vec[],int tam)
{   
	for(int i=0;i<tam;i++)
	{
		cout<< "vec["<< i << "]=";
		cout<< vec[i]<<endl;
	}
}



